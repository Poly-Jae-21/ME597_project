% define this file as a LaTeX style
\NeedsTeXFormat{LaTeX2e}[1994/06/01]
\ProvidesPackage{kjkbeamer}
  [2023/12/30 v1 LaTeX package for my own purpose]

% set presentation mode
\mode<presentation>

% use a simple black-and-white theme
\usetheme{default}
\usecolortheme{dove}

% remove spammy navigation symbols
\setbeamertemplate{navigation symbols}{}

% add page numbers in the lower right corner; change color/size
\setbeamertemplate{footline}[frame number]
\setbeamercolor{page number in head/foot}{fg=teal}
\setbeamerfont{page number in head/foot}{size=\large}

% center-align slide titles
\setbeamertemplate{frametitle}[default][center]

% change color of all slide titles
\setbeamercolor{frametitle}{bg=teal,fg=white}

% add serifs to all text
%\usefonttheme{serif}

% add folder to graphics path
\graphicspath{ {./Graphics/}{../Graphics/}{../../Graphics/}}					

% nonstandard packages
\usepackage{amsmath} % for math symbols
\usepackage{circuitikz} % for drawings and circuits (includes tikz too)
\usepackage{wasysym} % for cents sign
\usetikzlibrary{decorations.pathmorphing} % for squiggles and zigzags
\tikzset{snaky/.style={decorate,decoration={snake,amplitude=0.7mm,segment length=3mm,post length=2mm}}} % squiggly line shortcut
\usetikzlibrary{hobby} % for blobs
\tikzset{>=latex} % redefine default arrow
\usetikzlibrary{decorations.pathreplacing} % for curly braces
\usepackage{pgf-pie} % for pie charts
\usepackage{appendixnumberbeamer} % to reset slide numbers at appendix start
\usepackage[]{hyperref} % for intra-doc links
\usepackage{pgfplots} % for 3d graphs and other plots

%---- hyperref options ----%
\hypersetup{
	linktocpage = true, % make the page number be the link in ToC
	colorlinks = true, % color links
	citecolor = teal, % color citations
	linkcolor = teal, % link color link
	urlcolor = teal % URL color
}

% change itemize symbols
\setbeamertemplate{itemize item}{$\bullet$}
\setbeamertemplate{itemize subitem}{$\diamond$}

% remove footnote labels
\newcommand\emptyfootnote[1]{%
	\begingroup
	\renewcommand\thefootnote{}\footnote{\hskip -1.7em #1}%
	\addtocounter{footnote}{-1}%
	\endgroup
}

% add outline at beginning of each section
\AtBeginSection[]{
	\begin{frame}<beamer>[noframenumbering, plain]{}
	\frametitle{Outline}
	\tableofcontents[currentsection]
	\end{frame}
}

